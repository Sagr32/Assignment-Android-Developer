<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="80%"
            android:pivotY="15%"
            android:toDegrees="135">
            <shape android:shape="rectangle">
                <gradient
                    android:angle="90"
                    android:endColor="@color/gradientColor"
                    android:startColor="@color/secondaryMainColor"
                    android:type="linear" />
                <!--                <solid android:color="@color/gradientColor" />-->
            </shape>
        </rotate>
    </item>
